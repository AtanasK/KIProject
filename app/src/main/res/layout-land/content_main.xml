<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.feridgoranatanas.projectpinkifinki.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageLogo"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textTitle"
        android:layout_toLeftOf="@+id/buttonAllRuns"
        android:layout_toStartOf="@+id/buttonAllRuns" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textTitle"
        android:background="#00ffffff"
        android:text="@string/go_run"
        android:textColor="#262626"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all_runs"
        android:id="@+id/buttonAllRuns"
        android:textColor="#FFFFFF"
        android:background="#262626"
        android:textSize="25dp"
        android:width="250dp"
        android:height="100dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:layout_below="@+id/buttonStartRunning"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_running"
        android:id="@+id/buttonStartRunning"
        android:textColor="#FFFFFF"
        android:background="#262626"
        android:textSize="25dp"
        android:clickable="true"
        android:height="100dp"
        android:width="250dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
