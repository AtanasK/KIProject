<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feridgoranatanas.projectpinkifinki.RunStatsActivity">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL RUNS"
        android:id="@+id/btnAllRuns"
        android:textColor="#ffffff"
        android:background="#262626"
        android:width="200dp"
        android:height="70dp"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnGetB"
        android:layout_toEndOf="@+id/btnGetB"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/btnShare"
        android:textColor="#ffffff"
        android:background="#262626"
        android:width="150dp"
        android:height="70dp"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnAllRuns"
        android:layout_toEndOf="@+id/btnAllRuns"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/btnGetB"
        android:textColor="#ffffff"
        android:background="#262626"
        android:width="150dp"
        android:height="70dp"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textStats"
        android:textColor="#262626"
        android:textSize="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/map"
        android:layout_toEndOf="@+id/map" />
</RelativeLayout>
