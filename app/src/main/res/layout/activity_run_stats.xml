<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feridgoranatanas.projectpinkifinki.RunStatsActivity">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALL RUNS"
        android:id="@+id/btnAllRuns"
        android:textColor="#ffffff"
        android:background="#262626"
        android:layout_above="@+id/btnShare"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:height="20dp"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/btnShare"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:background="#262626"
        android:width="150dp"
        android:height="20dp"
        android:textSize="15dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/btnGetB"
        android:layout_alignTop="@+id/btnShare"
        android:textColor="#ffffff"
        android:background="#262626"
        android:width="150dp"
        android:height="20dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textStats"
        android:layout_above="@+id/btnAllRuns"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="#262626"
        android:textSize="15dp"/>
</RelativeLayout>
